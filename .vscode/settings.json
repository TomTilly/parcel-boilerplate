{
  "javascript.validate.enable": false, // turns off VSCode's default syntax validation (I'm using ESLint's)
  "javascript.format.enable": false, // turns off VSCode's default JS formatting (I'm using ESLint's)
  // Wes Bos' Eslint + Prettier settings (https://github.com/wesbos/eslint-config-wesbos)
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "eslint.alwaysShowStatus": true,
  // tell the ESLint plugin to run on save
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "eslint.run": "onSave",
  // Note from Wes: Optional BUT IMPORTANT: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
  "prettier.disableLanguages": ["javascript", "javascriptreact"],
  // End of Wes Bos' Eslint + Prettier settings
  "html.validate.scripts": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "cSpell.ignoreWords": ["readonly"]
}
